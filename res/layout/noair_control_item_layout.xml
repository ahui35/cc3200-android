                    android:id="@+id/air_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:src="@drawable/icon_off_air"
                    android:tag="@string/tag_power" />

                <ImageButton
                    android:id="@+id/air_cool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:src="@drawable/bt_zhileng"
                    android:tag="@string/tag_cool" />

                <ImageButton
                    android:id="@+id/air_heat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:src="@drawable/bt_zhire"
                    android:tag="@string/tag_heat" />

