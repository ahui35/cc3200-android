                    android:id="@+id/air_dry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:src="@drawable/bt_chushi"
                    android:tag="@string/tag_dry" />
            </LinearLayout>

            <!-- //////////////////////////////////////////////////////// -->

