<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/equips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_sixteen" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_play_control_panel_height"
            android:padding="@dimen/dp_ten" >

            <ImageButton
                android:id="@+id/btn_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/remotetypeshutdown"
                android:tag="@string/tag_power" />

            <ImageButton
                android:id="@+id/btn_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/remotetypemute"
                android:tag="@string/tag_volmute" />

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/remotetypemenu"
                android:tag="@string/tag_menu" />

            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/remotetypeback"
                android:tag="@string/tag_return" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_control" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_play_control_height"
                    android:layout_height="@dimen/dp_play_control_height"
                    android:layout_marginLeft="@dimen/dp_twenty_one"
                    android:layout_marginTop="@dimen/dp_twenty_two"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/btn_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowleft"
                        android:tag="@string/tag_left" />

                    <ImageButton
                        android:id="@+id/btn_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowup"
                        android:tag="@string/tag_up" />

                    <ImageButton
                        android:id="@+id/btn_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowright"
                        android:tag="@string/tag_right" />

                    <ImageButton
                        android:id="@+id/btn_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowdown"
                        android:tag="@string/tag_down" />

                    <ImageButton
                        android:id="@+id/btn_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_founty_two"
                        android:layout_marginTop="@dimen/dp_founty_two"
                        android:background="@null"
                        android:src="@drawable/remotetypeok"
                        android:tag="@string/tag_enter" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- button -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_ten" >

            <Button
                android:id="@+id/btn_lr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bt_yuanban"
                android:tag="@string/tag_lr" />

            <Button
                android:id="@+id/btn_past"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bt_qiege"
                android:tag="@string/tag_past" />

            <Button
                android:id="@+id/btn_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_yidian"
                android:tag="@string/tag_list" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_ten" >

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bt_chongchang"
                android:tag="@string/tag_repeat" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bt_delete"
                android:tag="@string/tag_del" />

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_youxian"
                android:tag="@string/tag_insert" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_ten" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageButton
                        android:id="@+id/btn_play"
                        android:tag="@string/tag_play"
                        android:layout_width="@dimen/dp_sixty"
                        android:layout_height="@dimen/dp_sixty"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/remotetypeplay"
                        android:src="@null"
                         />

                    <ImageButton
                        android:id="@+id/btn_pause"
                        android:tag="@string/tag_pause"
                        android:layout_width="@dimen/dp_sixty"
                        android:layout_height="@dimen/dp_sixty"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/remotetypepause"
                        android:src="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageButton
                        android:id="@+id/btn_backward"
                        android:tag="@string/tag_backward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:src="@drawable/remotetypereverse" />

                    <ImageButton
                        android:id="@+id/btn_forward"
                        android:tag="@string/tag_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/remotetypeforward" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_voice_karaoke" >

                    <ImageButton
                        android:id="@+id/btn_voldel"
                        android:tag="@string/tag_voldel"
                        android:layout_width="@dimen/dp_fifty_four"
                        android:layout_height="@dimen/dp_fifty_four"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/remotetypevolumedown"
                        android:src="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/text_voice" />

                    <ImageButton
                        android:id="@+id/btn_voladd"
                        android:tag="@string/tag_voladd"
                        android:layout_width="@dimen/dp_fifty_four"
                        android:layout_height="@dimen/dp_fifty_four"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/remotetypevolumeup"
                        android:src="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageButton
                        android:id="@+id/btn_last"
                        android:tag="@string/tag_last"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:src="@drawable/remotetypeprev" />

                    <ImageButton
                        android:id="@+id/btn_next"
                        android:tag="@string/tag_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/remotetypenext" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- show  the scrollview -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_seventy_two" />
    </LinearLayout>

</ScrollView>