<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/equips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_sixteen" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_play_control_panel_height"
            android:padding="@dimen/dp_ten" >

            <ImageButton
                android:id="@+id/power_am_power"
                android:tag="@string/tag_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/remotetypeshutdown" />

            <ImageButton
                android:id="@+id/power_am_volmute"
                android:tag="@string/tag_volmute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/remotetypemute" />

            <ImageButton
                android:id="@+id/power_am_return"
                android:tag="@string/tag_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/remotetypeback" />

            <ImageButton
                android:id="@+id/power_am_soundeffect"
                android:tag="@string/tag_soundeffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/icon_yinxiao" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_control" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_play_control_height"
                    android:layout_height="@dimen/dp_play_control_height"
                    android:layout_marginLeft="@dimen/dp_twenty_one"
                    android:layout_marginTop="@dimen/dp_twenty_two"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/power_am_left"
                        android:tag="@string/tag_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowleft" />

                    <ImageButton
                        android:id="@+id/power_am_up"
                        android:tag="@string/tag_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowup" />

                    <ImageButton
                        android:id="@+id/power_am_right"
                        android:tag="@string/tag_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowright" />

                    <ImageButton
                        android:id="@+id/power_am_down"
                        android:tag="@string/tag_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:src="@drawable/remotetypearrowdown" />

                    <ImageButton
                        android:id="@+id/power_am_enter"
                        android:tag="@string/tag_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_founty_two"
                        android:layout_marginTop="@dimen/dp_founty_two"
                        android:background="@null"
                        android:src="@drawable/remotetypeok" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_ten"
            android:paddingRight="@dimen/dp_ten" >

            <ImageButton
                android:id="@+id/power_am_menu"
                android:tag="@string/tag_menu"
                android:layout_width="@dimen/dp_sixty"
                android:layout_height="@dimen/dp_sixty"
                android:background="@drawable/remotetypemenu"
                android:src="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_sixteen"
            android:padding="@dimen/dp_sixteen" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/bg_voice" >

                <ImageButton
                    android:id="@+id/power_am_voldel"
                    android:tag="@string/tag_voldel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/remotetypevolumedown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/text_voice" />

                <ImageButton
                    android:id="@+id/power_am_voladd"
                    android:tag="@string/tag_voladd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/remotetypevolumeup" />
            </RelativeLayout>
        </LinearLayout>

        <!-- show  the scrollview -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_seventy_two" />
    </LinearLayout>

</ScrollView>